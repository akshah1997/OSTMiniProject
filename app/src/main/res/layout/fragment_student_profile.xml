<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akshay.ostminiproject.fragments.StudentProfileFragment"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/profile_btn_change_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_btn_signout"
            android:layout_alignStart="@+id/profile_btn_signout"
            android:layout_below="@+id/profile_btn_confirm_pwd"
            android:layout_marginTop="34dp"
            android:background="@color/colorAccent"
            android:text="@string/profile_change_password" />

        <Button
            android:id="@+id/profile_btn_signout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_btn_change_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:background="@color/colorAccent"
            android:text="@string/action_sign_out" />

        <EditText
            android:id="@+id/profile_newPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="@string/profile_new_password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/profile_btn_confirm_pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_newPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/colorAccent"
            android:text="@string/profile_confirm" />

        <ProgressBar
            android:id="@+id/profile_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/profile_btn_signout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />
    </RelativeLayout>


</FrameLayout>
